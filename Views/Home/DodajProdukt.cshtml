@model bazaDanych.Models.Produkt

<h2>Dodaj nowy produkt</h2>

<form asp-action="DodajProdukt" method="post">
    <div class="form-group">
        <label>Nazwa:</label>
        <input asp-for="Nazwa" class="form-control" />
    </div>
    <div class="form-group">
        <label>Cena:</label>
        <input asp-for="Cena" class="form-control" />
    </div>
    <div class="form-group">
        <label>Kategoria:</label>
        <input asp-for="Kategoria" class="form-control" />
    </div>
    <div class="form-group">
        <label>Opis:</label>
        <textarea asp-for="Opis" class="form-control"></textarea>
    </div>
    <br />
    <button type="submit" class="btn btn-success">Dodaj produkt</button>
</form>
